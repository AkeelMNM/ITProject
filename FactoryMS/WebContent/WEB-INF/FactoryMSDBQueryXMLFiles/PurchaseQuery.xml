<Querys >

<!-- insert  Leave Query -->
	<query id="insert_tealeaf">
        <![CDATA[
          Insert into  tealeaves(TLID,PaymentID,SupID,Supplier_Name,Quantity,Unit_Price,Paid,PDate)
          	values (?, ?, ?, ?, ?, ?, ?,?)
        ]]>
	</query>

<!-- Select a particular Leaf by id Query -->
	<query id="leaf_by_id">
         <![CDATA[        
            select * from tealeaves where TLID = ?
        ]]>
	</query>



